<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <TextView
        android:id="@+id/text_info_l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text=""
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical|left">
    </TextView>
    <TextView
        android:id="@+id/text_expression_l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:text="0"
        android:textSize="30dp"
        android:padding="10dp"
        android:gravity="top|right">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="#ffffff"
        android:elevation="0dp">

        <LinearLayout
            style="@style/btn_column">
                <Button
                    android:id="@+id/btn_left_bracket_l"
                    android:text="("
                    style="@style/text_btn"
                    />
                <Button
                    android:id="@+id/btn_right_bracket_l"
                    android:text=")"
                    style="@style/text_btn"
                    />
                <ImageButton
                    android:id="@+id/btn_backspace_l"
                    android:src="@drawable/ic_backspace"
                    style="@style/img_btn"
                    />
                <Button
                    android:id="@+id/btn_clear_l"
                    android:text="C"
                    style="@style/text_btn"
                    />
                <Button
                    android:text=""
                    style="@style/text_btn"
                    />
        </LinearLayout>

        <LinearLayout
            style="@style/btn_column">
            <Button
                android:id="@+id/btn_num7_l"
                android:text="7"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_num8_l"
                style="@style/text_btn"
                android:text="8" />
            <Button
                android:id="@+id/btn_num9_l"
                android:text="9"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_divide_l"
                android:text="/"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_pow_l"
                android:text="^"
                style="@style/text_btn"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/btn_column">
            <Button
                android:id="@+id/btn_num4_l"
                android:text="4"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_num5_l"
                android:text="5"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_num6_l"
                android:text="6"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_multiply_l"
                android:text="X"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_kramp_l"
                android:text="!"
                style="@style/text_btn"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/btn_column">
            <Button
                android:id="@+id/btn_num1_l"
                android:text="1"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_num2_l"
                android:text="2"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_num3_l"
                android:text="3"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_subtract_l"
                android:text="-"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_cal_l"
                android:text="âˆ«"
                style="@style/text_btn"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/btn_column">
            <Button
                android:id="@+id/btn_num0_l"
                android:text="0"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_point_l"
                android:text="."
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_equal_l"
                android:text="="
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_add_l"
                android:text="+"
                style="@style/text_btn"
                />
            <Button
                android:id="@+id/btn_var_l"
                android:text="var"
                style="@style/text_btn"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

